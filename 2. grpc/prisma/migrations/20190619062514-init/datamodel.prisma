datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
    default  = true
}

generator photon {
    provider = "photonjs"
    output   = "node_modules/@generated/photon"
}

model Character {
    id String @default(cuid()) @id @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    marvelId String
    name String
    description String?
    thumbnail String?
    movies Movie[]
}

model Movie {
    id String @default(cuid()) @id @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    film String
    releaseYear Int?
    budget Int?
    runningTime Int?
    domesticGross Int?
    weekendGross Int?
    overseasGross Int?
    worldwideGross Int?
    characters Character[]
}

