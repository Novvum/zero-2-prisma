datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
    default  = true
}

generator photon {
    provider = "photonjs"
    output   = "node_modules/@generated/photon"
}

model Hero {
    id    String  @default(cuid()) @id @unique
    name  String?
    movies Movie[]
}

model Movie {
    id        String   @default(cuid()) @id @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    released  Boolean
    title     String
    mainCharacter  Hero?
}